{
  "name": "Prettier-test",
  "version": "1.0.0",
  "description": "Prettierを試す用",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "yarn eslint src/**/*.js",
    "lint:css": "yarn stylelint src/**/*.css",
    "lint:fix": "eslint --fix src/**/*.js",
    "format": "prettier src/**/*.js",
    "format:js": "prettier-eslint src/**/*.js",
    "format:css": "stylelint src/**/*.{css,pcss,scss}",
    "format:fix:js": "prettier --write src/**/*/js",
    "format:fix:css": "stylelint --fix src/**/*.{css,pcss,scss}"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.1.3",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
